.simplecolorpicker
  &.icon
    -moz-user-select: none;
    -khtml-user-select: none;
    -webkit-user-select: none;
    -o-user-select: none;

.olTileImage
  max-width none
  vertical-align none
  border none

.separator
  height 22px
  width 2px
  background-color  rgb(196, 196, 196)

.olEditorControlPanelEditTrack

    position absolute
    right 8px
    top 8px
    cursor pointer
    & > div
      background-repeat no-repeat
      background-position center
      margin 0 4px
      float left



.olEditorControlNewTrack
  position absolute
  display block
  right 8px
  top 8px

.olEditorControlUpload
  position absolute
  display block
  top 8px
  left 250px
.olEditorControlMyTracks, .olEditorControlLayerSwitcher

  &.olEditorControlMyTracks
    left 50px
    > ul
      li
        div
          float right
          a
            margin-left 5px
  &.olEditorControlLayerSwitcher
    left 150px

  position absolute
  display block

  top 8px

  > ul
    list-style-type none
    margin-top 10px
    margin-left 0